{
  "name": "graphwalker",
  "version": "00.00.04",
  "license": "MIT",
  "description": "Graph traversal tool for the web browser",
  "repository": "https://github.com/bijanvakili/graphwalker",
  "engines": {
    "node": ">=6.10"
  },
  "dependencies": {
    "history": "^4.7.2",
    "lodash": "4.12.0",
    "purecss": "^1.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-thunk": "^2.2.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/history": "^4.6.2",
    "@types/lodash": "^4.14.68",
    "@types/node": "^8.0.20",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-redux": "^5.0.9",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-router-redux": "^5.0.11",
    "@types/redux-actions": "^2.2.1",
    "@types/webpack": "^3.0.11",
    "awesome-typescript-loader": "^3.2.3",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "markdownlint": "^0.8.1",
    "markdownlint-cli": "^0.8.1",
    "pre-commit": "1.1.2",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.20.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "2.5.2",
    "uglifyjs-webpack-plugin": "0.4.6",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.7.1"
  },
  "scripts": {
    "dist": "NODE_ENV=production yarn run build",
    "build": "webpack --config-name vendor && webpack --config-name app",
    "watch": "webpack --watch --progress --config-name app",
    "web": "webpack-dev-server",
    "docker_web": "yarn install && yarn run build && yarn run web -- --host=0.0.0.0",
    "clean": "rm -rf ./build ./node_modules",
    "partial_clean": "rm -rf ./build",
    "todos": "grep -R TODO app/*",
    "lint-md": "markdownlint *.md docs/",
    "lint-ts": "tslint -c tslint.json 'app/**/*.tsx' 'app/**/*.ts'",
    "lint-changed-md": "git diff --name-only --cached --relative | grep '\\.md\\?$' | xargs ./node_modules/.bin/markdownlint",
    "lint-changed-ts": "git diff --name-only --cached --relative | grep '\\.tsx\\?$' | xargs ./node_modules/.bin/tslint -c tslint.json"
  },
  "pre-commit": [
    "lint-changed-md",
    "lint-changed-ts"
  ],
  "main": "index.html",
  "author": "Bijan Vakili <bijanvakili@users.noreply.github.com>"
}
