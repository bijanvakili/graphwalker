{
  "name": "graph_walker",
  "version": "00.00.02",
  "license": "MIT",
  "description": "Graph traversal tool for the web browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/bijanvakili/graphwalker"
  },
  "devDependencies": {
    "aliasify": "1.7.2",
    "bower": "1.7.9",
    "browserify": "11.0.1",
    "eslint": "2.2.0",
    "eslint-config-standard": "5.1.0",
    "eslint-plugin-standard": "1.3.2",
    "eslint-plugin-promise": "1.0.8",
    "exorcist": "0.4.0",
    "minimist": "1.2.0",
    "node-static": "0.7.6",
    "pre-commit": "1.1.2",
    "remapify": "2.0.3",
    "stringify": "3.1.0",
    "watchify": "3.4.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "build": "node build.js",
    "build_monitor": "node build.js --debug",
    "docker_jsmonitor": "npm install && bower install --allow-root && npm run build_monitor",
    "docker_webserver": "npm install && npm start",
    "clean": "rm -rf ./build ./bower_components ./node_modules",
    "partial_clean": "rm -rf ./build",
    "todos": "grep -R TODO app/*",
    "lint": "eslint '**/*.js'",
    "lint-changed": "git diff --name-only --cached --relative | grep '\\.js$' | xargs ./node_modules/.bin/eslint"
  },
  "pre-commit": [
    "lint-changed"
  ]
}
